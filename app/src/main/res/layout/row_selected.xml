<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="2dp"
        android:id="@+id/tagCardLayout"
        android:padding="5dp"
>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="#545A5A"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tagsName1"
                android:layout_alignParentStart="true"
                android:textSize="25sp"
                tools:text="Javascript"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="#F7F5F8"
                android:layout_marginStart="25dp"/>
        <ImageButton android:layout_width="35dp" android:layout_height="30dp"
                     android:id="@+id/removeButton"
                     android:src="@drawable/ic_close"
                     android:layout_toRightOf="@+id/tagsName1"
                     android:layout_centerVertical="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>